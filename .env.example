# Server Configuration
PORT=3001
NODE_ENV=development
APP_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000

# CORS Configuration (semicolon-separated)
PODS_APP_WHITELIST=http://localhost:3000;http://localhost:5173

# Database Configuration
DATABASE_URL=postgresql://minidrive:minidrive_password@localhost:5433/minidrive

# PostgreSQL Docker Configuration
POSTGRES_USER=minidrive
POSTGRES_PASSWORD=minidrive_password
POSTGRES_DB=minidrive
POSTGRES_PORT=5433

# MinIO Configuration
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_BUCKET_NAME=minidrive-files

# MinIO Docker Configuration
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

# Security & Encryption
# CRITICAL: Change this in production! Use a strong random 32-byte key
MASTER_ENCRYPTION_KEY=your-32-byte-base64-encoded-master-key-here-change-in-production

# WebAuthn Configuration
WEBAUTHN_RP_NAME=MiniDrive
WEBAUTHN_RP_ID=localhost
WEBAUTHN_ORIGIN=http://localhost:3000

# Session Configuration
SESSION_SECRET=your-session-secret-change-in-production
SESSION_EXPIRY_HOURS=168
